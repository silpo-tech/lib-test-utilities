{
  "name": "silpo-tech/lib-test-utilities",
  "description": "Library for additional test utilities",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "ext-json": "*",
    "sebastian/comparator": "^6.0|^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4|^12.0",
    "phpstan/phpstan": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "SilpoTech\\Lib\\TestUtilities\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:coverage": {
      "command": "APP_ENV=test php -d extension=pcov.so -d pcov.enabled=1 bin/phpunit --colors=never --coverage-clover reports/coverage/clover.xml --log-junit reports/junit.xml"
    },
    "test:run": [
      "APP_ENV=test php bin/phpunit --color=always"
    ]
  },
  "repositories": []
}
